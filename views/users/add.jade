extends ../layout

block content
  .container
    form(method="post", action="/users/add")
      .form-spaces
        .form-elem
          label.comp-ui お名前
            input.comp-ui(type="text", name="username")
        .form-elem
          label.comp-ui メールアドレス
            input.comp-ui(type="text", name="email")
        .form-elem
          label.comp-ui ニックネーム
            input.comp-ui(type="text", name="nickname")
        .form-elem
          label.comp-ui 得意技
            input.comp-ui(type="text", name="strength")
        .form-elem
          label.comp-ui 説明
            textarea.comp-ui(name="description", rows="10")
        button.comp-ui(type="submit") 登録
